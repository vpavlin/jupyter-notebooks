#!/bin/bash

set -x

set -eo pipefail

# Execute original assemble script.

/opt/app-root/builder/assemble

wget https://nodejs.org/dist/v12.18.3/node-v12.18.3-linux-x64.tar.xz
tar -xvf node-v12.18.3-linux-x64.tar.xz
rm -rf node-v12.18.3-linux-x64.tar.xz

CURRENT_DIR="$(pwd)"
export PATH="$CURRENT_DIR/node-v12.18.3-linux-x64/bin:$PATH"

pip install elyra==1.0.1 && jupyter lab build

# Fix up permissions.
fix-permissions /opt/app-root
